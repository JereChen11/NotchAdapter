<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandscapeTestActivity">

    <Button
        android:id="@+id/landscapeTopBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="landscape top Btn"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/landscapeTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="landscape Title"
        android:textSize="20sp"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/landscapeBottomBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="landscape bottom Btn"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>